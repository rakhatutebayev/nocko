{
  "collectionName": "components_menu_menu_items",
  "info": {
    "displayName": "Menu Item",
    "description": "Navigation menu item with optional dropdown submenu (max 2 levels)",
    "icon": "list"
  },
  "options": {},
  "attributes": {
    "label": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "maxLength": 100
    },
    "url": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "linkType": {
      "type": "enumeration",
      "enum": ["custom", "page", "service", "case-study", "article", "industry"],
      "default": "custom"
    },
    "order": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "submenu": {
      "type": "component",
      "repeatable": true,
      "component": "menu.menu-subitem",
      "max": 20
    }
  }
}
